{
  "branches": ["main"],
  "plugins": [
    ["@semantic-release/commit-analyzer", {
      "preset": "angular",
      "releaseRules": [
        {"type": "BREAKING CHANGE", "release": "major"},
        {"type": "breaking", "release": "major"},
        {"type": "feat", "release": "minor"},
        {"type": "improve", "release": "patch"},
        {"type": "refactor", "release": "patch"},
        {"type": "perf", "release": "patch"},
        {"type": "fix", "release": "patch"},
        {"type": "hotfix", "release": "patch"},
        {"type": "security", "release": "patch"},
        {"type": "style", "release": "patch"},
        {"type": "sentry", "release": "patch"},
        {"type": "i18n", "release": "patch"},
        {"type": "a11y", "release": "patch"},
        {"type": "docs", "release": false},
        {"type": "test", "release": false},
        {"type": "ci", "release": false},
        {"type": "build", "release": false},
        {"type": "chore", "release": false},
        {"type": "revert", "release": false},
        {"type": "init", "release": false},
        {"type": "release", "release": false}
      ]
    }],
    ["@semantic-release/release-notes-generator", {
      "preset": "conventionalcommits",
      "presetConfig": {
        "types": [
          {"type": "BREAKING CHANGE", "section": "ğŸ”¥ Breaking Changes", "hidden": false},
          {"type": "breaking", "section": "ğŸ”¥ Breaking Changes", "hidden": false},
          {"type": "feat", "section": "ğŸš€ Features", "hidden": false},
          {"type": "improve", "section": "âœ¨ Improvements", "hidden": false},
          {"type": "refactor", "section": "ğŸ”§ Refactoring", "hidden": false},
          {"type": "perf", "section": "âš¡ Performance", "hidden": false},
          {"type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false},
          {"type": "hotfix", "section": "ğŸš‘ Hot Fixes", "hidden": false},
          {"type": "security", "section": "ğŸ”’ Security", "hidden": false},
          {"type": "style", "section": "ğŸ’„ Styling", "hidden": false},
          {"type": "sentry", "section": "ğŸ“Š Sentry fixes", "hidden": false},
          {"type": "i18n", "section": "ğŸŒ Internationalization", "hidden": false},
          {"type": "a11y", "section": "â™¿ Accessibility", "hidden": false},
          {"type": "docs", "section": "ğŸ“š Documentation", "hidden": false},
